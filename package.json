{
  "name": "untangle-platform",
  "version": "1.0.0",
  "description": "Untangle Platform - Backend, Web, and Mobile",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd web/client && npm run start",
    "dev:mobile": "cd mobile && npm run web",
    "dev:mobile:ios": "cd mobile && npm run ios",
    "dev:mobile:android": "cd mobile && npm run android",
    "install:all": "npm install && cd backend && npm install && cd ../web/client && npm install && cd ../../mobile/mobile && npm install",
    "build": "npm run build:web && npm run build:mobile",
    "build:web": "cd web/client && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "typecheck": "npm run typecheck:web && npm run typecheck:mobile",
    "typecheck:web": "cd web/client && npm run typecheck",
    "typecheck:mobile": "cd mobile && npm run typecheck",
    "clean": "rm -rf node_modules backend/node_modules web/node_modules mobile/node_modules",
    "setup": "npm run install:all",
    "start": "cd backend && npm start",
    "build:prod": "cd backend && npm run build:prod"
  },
  "dependencies": {
    "@playwright/test": "^1.55.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.4",
    "mongoose": "^8.0.1",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "openai": "^4.20.1",
    "razorpay": "^2.9.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "backend",
    "web/client", 
    "mobile/mobile",
    "shared"
  ]
}
