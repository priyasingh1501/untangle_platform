{
  "version": 2,
  "buildCommand": "cd web/client && CI=false npm ci && CI=false npm run build",
  "outputDirectory": "web/client/build",
  "installCommand": "cd web/client && npm install",
  "builds": [
    {
      "src": "web/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web/client/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://untangle-production.up.railway.app",
    "CI": "false"
  }
}
