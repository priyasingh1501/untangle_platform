{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/api/*": ["src/api/*"],
      "@/screens/*": ["src/screens/*"],
      "@/navigation/*": ["src/navigation/*"],
      "@/storage/*": ["src/storage/*"],
      "@/config": ["src/config/index"]
    }
  },
  "include": ["src", "App.tsx", "index.ts"]
}
